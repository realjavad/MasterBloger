    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
        <h2 class="mb-4">Article Category</h2>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Status</th>
                <th>CreationDate</th>
                <th style="color: red">Edit</th>
            </tr>
            </thead>
            <tbody>

            @foreach (var item in Model.ArticleCategoriesList)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.Title</th>
                    @if (item.IsDeleted == false)
                    {
                        <th>
                            <i class="fa fa-check fa-btn-adm"></i>
                        </th>
                    }
                    else
                    {
                        <th>
                            <i class="fas fa-times fa-btn-adm"></i>
                        </th>
                    }
                    <th>@item.creationDate</th>
                    <th>
                        <form method="post" class="d-inline">
                            <a class="rename" asp-route-Id="@item.Id" asp-page="/Edit">
                                <i class="far fa-edit"></i>
                            </a>
                            <input type="hidden" asp-for="Id" name="Id" value="@item.Id"/>
                            <button type="submit" class="btn">
                                <i class="fas fa-retweet"></i>
                            </button>
                        </form>
                    </th>
                </tr>
            }
            </tbody>
        </table>
    </div>
